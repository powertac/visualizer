	<bean id="gameOverviewBean" class="org.powertac.visualizer.user.GameOverviewBean"
		scope="request" />
	<bean id="wholesaleMarketBean" class="org.powertac.visualizer.user.WholesaleMarketBean"
		scope="request" />
